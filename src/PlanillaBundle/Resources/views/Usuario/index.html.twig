{% extends "@Planilla/general_layout.html.twig" %}
{% block content %}
    <div class="col-lg-6">
        <h2>Lista de Usuarios</h2>
        <hr/>
        <a href="{{ path("usuario_add") }}" class="btn btn-success">AÃ±adir usuario</a>
        <hr/>
        {% for message in app.session.flashbag().get('status') %}
            <div class="alert alert-success">{{message}}</div>
        {% endfor %}
        <table class="table table-bordered table-responsive" height="430px">
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Cargo</th>
                <th>DNI</th>
                <th>Eliminar</th>
            </tr>
            {% for usuario in usuarios %}
                <tr>
                    <td><a href="{{path("usuario_edit",{"id":usuario.id})}}" class="btn btn-warning">{{ usuario.id }}</a></td>
                    <td>{{ usuario.nombres }}</td>
                    <td>{{ usuario.apellidos}}</td>
                    <td>{{ usuario.cargo }}</td>
                    <td>{{ usuario.dni }}</td>
                    <td>
                    {% if(usuario.planilla|length == 0) %}
                    <a href="{{path("usuario_delete",{"id":usuario.id})}}" class="btn btn-danger">Eliminar</a>
                    {% else %}
                    Imposible eliminar
                    {% endif %}
                    </td>
                    </tr>
            {% endfor %}
        </table>
    </div>
    <div class="clearfix"></div>
{% endblock %}